#include<iostream>
using namespace std;
int main(){
	int n,i=1,sum;
	cout << "Enter a number: ";
	cin >> n;
	sum = 0;
	while (i<n){
		if (n%i == 0){
			sum = sum+ i;
		}
		i++;
	}
	if (sum == n){
		cout << n << " is a perfect number";
	}
	else{
		cout << n << " is not a perfect number";
	}
	return 0;
}
